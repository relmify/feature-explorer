{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "outDir": "out",
    "lib": ["es2019"],
    "strict": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["**/__mocks__/*"],
  "typedocOptions": {
    "inputFiles": ["./src"],
    "files": ["./src"],
    "theme": "node_modules/typedoc-neo-theme/bin/default",
    "mode": "modules",
    "out": "docs",
    "exclude": ["**/src/test/*", "**/*.test.ts", "**/__tests__/*", "**/__mocks__/*", "**/__steps__/*"],
    "excludeNotExported": true
  }
}
